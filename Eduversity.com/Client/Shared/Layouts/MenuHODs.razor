
@inject IToggleMenuService toggleMenuService

<AuthorizeView Roles="HOD"> 
    <NotAuthorized>

    </NotAuthorized>
    <Authorized>
        
        <li class="nav-item px-1">
            <NavLink class="nav-link" href="department/account">
                <span class="oi oi-key" aria-hidden="true"></span>
                Account
            </NavLink>
        </li>
        <hr />
        <li class="nav-item px-1">
            <NavLink class="nav-link" @onclick="() => toggleMenuService.TogleSubmenu(NavSubmenu.First)">
                <span class="oi oi-people"></span>
                Users
            </NavLink>
        </li>

        @if (toggleMenuService.Submenu == NavSubmenu.First)
        {
            <li class="nav-item ps-5 pe-1">
                <NavLink class="nav-link" @onclick="() => toggleMenuService.ToggleNavMenu()" href="department/hod">
                    HOD
                </NavLink>
            </li>
            <li class="nav-item ps-5 pe-1">
                <NavLink class="nav-link" @onclick="() => toggleMenuService.ToggleNavMenu()" href="department/lecturers">
                    Lecturers
                </NavLink>
            </li>
            <li class="nav-item ps-5 pe-1">
                <NavLink class="nav-link" @onclick="() => toggleMenuService.ToggleNavMenu()" href="department/students">
                    Students
                </NavLink>
            </li>            
        }
        <hr />        
    </Authorized>
</AuthorizeView>
